@model IEnumerable<ConcertSystem.Models.Admin>

@{
    ViewData["Title"] = "Index";
}

<h1>Concert Display Preview (Admin)</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<hr />
<div class="column">
    <div class="col-md-4">
        <form asp-action="ShowSearchResult">

            <div class="form-group" mb-3">
                <label for="searchTerms" class="control-label"></label>
                <input id="searchTerms" name="searchTerms" class="form-control"
                       style="border: 2px solid #ccc; height: 40px" placeholder="Search..."
            </div>

            <div class="form-group" mt-3 style="margin-top: 30px">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div class="column">
    <div class="col-md-4">
        <form asp-action="ShowAllResult">

            <div class="form-group" mt-3 style="margin-top: 30px">
                <input type="submit" value="Show All Concert" class="btn btn-primary" asp-controller="Admins" asp-action="Index" />
            </div>

        </form>
    </div>
</div>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.time)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.artist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.time)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
